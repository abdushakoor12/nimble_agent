{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Nimble Agent CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "run",
                "--workspace-path",
                "${workspaceFolder}/SampleWorkspace",
                "Create flutter app with cool animation"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOGLEVEL": "DEBUG"
            }
        }
    ]
} 